<div class="container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <div class="container content">
  <%=raw @post.content %>
  </div>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.username %>
</p>

<h3>Comments</h3>
<div class="container comment">
<ul>
<% @post.comments.find_each do |comment| %>
  <li>  posted by: <%= comment.user.username %>  </li>
  <div class="comment">
 <p> <%= comment.content %> </p>
 </div>
<% end %> 
</ul>
</div>
<% if current_user && @post.owner?(current_user) %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<% if user_signed_in? %>
<%= link_to 'Add Comment', new_post_comment_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
</div>